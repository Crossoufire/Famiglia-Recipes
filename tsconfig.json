{
    "compilerOptions": {
        "incremental": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "isolatedModules": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "noErrorTruncation": false,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "noEmit": true,
        "strictNullChecks": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}
